# Database (PostgreSQL recommended for production)
POSTGRES_USER=warmit
POSTGRES_PASSWORD=warmit_secure_password_2026
POSTGRES_DB=warmit

# PostgreSQL (RECOMMENDED - production-ready with better performance)
DATABASE_URL=postgresql+asyncpg://warmit:warmit_secure_password_2026@postgres:5432/warmit

# SQLite (For development/testing only - not recommended for production)
# DATABASE_URL=sqlite+aiosqlite:///./warmit.db

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# AI Configuration
AI_PROVIDER=openrouter  # openrouter, groq, or openai

# Multiple API keys for fallback (optional - add more keys for redundancy)
OPENROUTER_API_KEY=your_openrouter_key_here
OPENROUTER_API_KEY_2=  # Optional: 2nd OpenRouter key for fallback
OPENROUTER_API_KEY_3=  # Optional: 3rd OpenRouter key for fallback
GROQ_API_KEY=your_groq_key_here
GROQ_API_KEY_2=  # Optional: 2nd Groq key for fallback
OPENAI_API_KEY=  # Optional: OpenAI key as last resort

# Models for each provider
AI_MODEL=meta-llama/llama-3.3-70b-instruct:free  # Free model on OpenRouter
GROQ_MODEL=llama-3.3-70b-versatile
OPENAI_MODEL=gpt-4o-mini

# Application
DEBUG=true
LOG_LEVEL=INFO

# Security - Encryption Key for sensitive data (passwords, etc.)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# Email Warming Configuration
MIN_EMAILS_PER_DAY=5
MAX_EMAILS_PER_DAY=100
WARMUP_DURATION_WEEKS=6
RESPONSE_DELAY_MIN_HOURS=1
RESPONSE_DELAY_MAX_HOURS=6

# Safety Settings
MAX_BOUNCE_RATE=0.05
AUTO_PAUSE_ON_HIGH_BOUNCE=true

# Tracking - Base URL for tracking pixels
# ⚠️ IMPORTANT: This MUST be publicly accessible by email clients
#
# For LOCAL testing:
#   API_BASE_URL=http://localhost:8000
#
# For PRODUCTION (VPS/Server):
#   Use your server's PUBLIC IP address or domain name
#   Examples:
#     API_BASE_URL=http://123.45.67.89:8000
#     API_BASE_URL=https://warmit.yourdomain.com
#
# Why this matters:
#   Email tracking pixels (<img src="API_BASE_URL/track/open/123" />)
#   need to be downloadable by recipient's email clients.
#   If recipients can't reach this URL, opens won't be tracked!
#
# Requirements:
#   - Must be accessible from the internet (not localhost/127.0.0.1)
#   - Port 8000 must be open in your firewall
#   - Recommended: Use HTTPS with a domain + reverse proxy (nginx/caddy)
#
API_BASE_URL=http://localhost:8000
