version: '3.8'

services:
  # Redis for Celery
  redis:
    image: redis:7-alpine
    container_name: warmit-redis
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data
    restart: unless-stopped

  # PostgreSQL (optional, can use SQLite)
  postgres:
    image: postgres:16-alpine
    container_name: warmit-postgres
    environment:
      POSTGRES_DB: warmit
      POSTGRES_USER: warmit
      POSTGRES_PASSWORD: warmit_password
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    restart: unless-stopped

  # WarmIt API
  api:
    build: .
    container_name: warmit-api
    command: uvicorn warmit.main:app --host 0.0.0.0 --port 8000
    ports:
      - "8000:8000"
    environment:
      DATABASE_URL: postgresql+asyncpg://warmit:warmit_password@postgres/warmit
      REDIS_URL: redis://redis:6379/0
    env_file:
      - .env
    depends_on:
      - redis
      - postgres
    volumes:
      - ./src:/app/src
      - ./logs:/app/logs
    restart: unless-stopped

  # Celery Worker
  worker:
    build: .
    container_name: warmit-worker
    command: celery -A warmit.tasks worker --loglevel=info
    environment:
      DATABASE_URL: postgresql+asyncpg://warmit:warmit_password@postgres/warmit
      REDIS_URL: redis://redis:6379/0
    env_file:
      - .env
    depends_on:
      - redis
      - postgres
    volumes:
      - ./src:/app/src
      - ./logs:/app/logs
    restart: unless-stopped

  # Celery Beat (Scheduler)
  beat:
    build: .
    container_name: warmit-beat
    command: celery -A warmit.tasks beat --loglevel=info
    environment:
      DATABASE_URL: postgresql+asyncpg://warmit:warmit_password@postgres/warmit
      REDIS_URL: redis://redis:6379/0
    env_file:
      - .env
    depends_on:
      - redis
      - postgres
    volumes:
      - ./src:/app/src
      - ./logs:/app/logs
    restart: unless-stopped

volumes:
  redis_data:
  postgres_data:
